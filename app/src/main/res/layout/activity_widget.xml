<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3f3f3f"
    tools:context="com.example.iakari.xmltest.Widget">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/Widgets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Button -->
            <LinearLayout
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textButton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="Button"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="#4a7000"
                    android:text="Button"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <!-- ToggleButton -->
            <LinearLayout
                android:id="@+id/toggleButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textToggleButton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="ToggleButton"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="14sp" />

                <ToggleButton
                    android:id="@+id/toggleButton"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="#4a7000"
                    android:text="ToggleButton"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <!-- CheckBox -->
            <LinearLayout
                android:id="@+id/checkboxLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textCheckBox"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="CheckBox"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CheckBox"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <!-- RadioButton -->
            <LinearLayout
                android:id="@+id/radiobuttonLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textRadioButton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="RadioButton"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="14sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RadioButton"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <!-- CheckedTextView -->
            <LinearLayout
                android:id="@+id/checkedtextviewLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textCheckedTextView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="CheckedTextView"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="14sp" />

                <CheckedTextView
                    android:id="@+id/checkedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checkMark="@drawable/sw_off"
                    android:gravity="center_vertical"
                    android:text="CheckedTextView"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <!-- Spinner -->
            <LinearLayout
                android:id="@+id/spinnerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textSpinner"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="Spinner"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:layout_weight="1"/>

            </LinearLayout>

            <!-- ProgressBar -->
            <LinearLayout
                android:id="@+id/progressbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textProgressBar"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="ProgressBar"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="14sp" />

                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <!-- ProgressBar(horizontal) -->
            <LinearLayout
                android:id="@+id/progressbarHLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textProgressBarH"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="progressBar(horizontal)"
                    android:textColor="@android:color/holo_green_dark" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <!-- SeekBar -->
            <LinearLayout
                android:id="@+id/seekbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textSeekBar"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="SeekBar"
                    android:textColor="@android:color/holo_green_dark" />

                <SeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <!-- SeekBar(Discrete) -->
            <LinearLayout
                android:id="@+id/seekbarDLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textSeekBarD"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="SeekBar(Discrete)"
                    android:textColor="@android:color/holo_green_dark" />

                <SeekBar
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="10"
                    android:progress="3" />

            </LinearLayout>

            <!-- QuickContactBadge -->
            <LinearLayout
                android:id="@+id/quickcontactbadgeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textQuickContactBadge"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="QuickContactBadge"
                    android:textColor="@android:color/holo_green_dark" />

                <QuickContactBadge
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/btn_star" />

            </LinearLayout>

            <!-- RatingBar -->
            <LinearLayout
                android:id="@+id/ratingbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textRatingBar"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="RatingBar"
                    android:textColor="@android:color/holo_green_dark" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <!-- Switch -->
            <LinearLayout
                android:id="@+id/switchLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textSwitch"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="Switch"
                    android:textColor="@android:color/holo_green_dark" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Switch"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <!-- Space -->
            <LinearLayout
                android:id="@+id/spaceLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textSpace"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="Space"
                    android:textColor="@android:color/holo_green_dark" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
